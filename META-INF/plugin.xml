<idea-plugin version="2" url="https://github.com/Jintin/droidlane">
    <id>com.jintin.droidlane</id>
    <name>DroidLane</name>
    <version>2.0.0</version>
    <vendor email="jintinapps@gmail.com" url="https://github.com/Jintin/droidlane">JintinApps</vendor>

    <description><![CDATA[
        <h1>Droidlane</h1>
        <br/>
        <a href="https://github.com/Jintin/DroidLane">GitHub</a> |
        <a href="https://github.com/Jintin/DroidLane/issues">Issues</a>
        <br/>
        <br/>
        <b>Droidlane</b> is an deploy tool help you upload your apk to Google Play.
        <br/>
    ]]></description>

    <change-notes><![CDATA[
        * add Google Play listing support
    ]]>
    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="123.72"/>

    <actions>
        <group id="droidlane.group" text="DroidLane" description="DroidLane Group"
               popup="true">
            <action id="droidlane.upload" class="com.jintin.droidlane.ApkAction" text="Upload Apk"
                    description="Upload Apk to Google Play">
                <add-to-group group-id="BuildMenu" anchor="last"/>
            </action>
            <action id="droidlane.list" class="com.jintin.droidlane.ListingAction" text="Upload Listing"
                    description="Upload Listing to Google Play">
            <add-to-group group-id="BuildMenu" anchor="last"/>
            </action>
            <add-to-group group-id="BuildMenu" anchor="last"/>
        </group>
    </actions>


</idea-plugin>